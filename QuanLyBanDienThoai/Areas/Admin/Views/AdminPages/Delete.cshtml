@model QuanLyBanDienThoai.Models.Page

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPages" asp-action="Index">Danh Sách Page</a>

            <span class="breadcrumb-item active">Xoá Page : @Model.PageName </span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Xoá Page : @Model.PageName</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.PageId</td>
                    </tr>
                    <tr>
                        <td>Tên Page:</td>
                        <td>@Model.PageName</td>
                    </tr>

                    <tr>
                        <td>Nội dung</td>
                        <td>@Model.Contents</td>
                    </tr>

                    <tr>
                        <td>Public:</td>
                        <td>
                            @if (Model.Published == true)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Deactive</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Ngày tạo:</td>
                        <td>@Model.CreateDate</td>
                    </tr>

                    <tr>
                        <td>TIêu đề:</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>MetaDesc:</td>
                        <td>@Model.MetaDesc</td>
                    </tr>
                    <tr>
                        <td>MetaKey:</td>
                        <td>@Model.MetaKey</td>
                    </tr>
                    <tr>
                        <td>Alias:</td>
                        <td>@Model.Alias</td>
                    </tr>
                    <tr>
                        <td>Ordering:</td>
                        <td>
                            @if (Model.Ordering == null)
                            {
                                <span class="badge badge-danger">Chưa có</span>
                            }
                            else
                            {
                                if (Model.Ordering == true)
                                {
                                    <span class="badge badge-danger">Order</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Unorder</span>
                                }
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>Ảnh đại diện: @Model.Thumb</td>
                        <td>
                            <img width="200px" height="200px" src="~/images/pages/@Model.Thumb" alt="@Model.Title" />
                        </td>
                    </tr>
                    <tr>
                        <td>Xác nhận xoá</td>
                        <td>
                            <form asp-controller="AdminPages" asp-action="Delete" asp-route-id="@Model.PageId" method="post">
                                <input type="hidden" asp-for="PageId" />
                                <input type="submit" value="Xoá" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
