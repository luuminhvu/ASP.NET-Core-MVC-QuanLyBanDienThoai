@model QuanLyBanDienThoai.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>

<form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId" />
    <div class="form-group">
        <div class="form-group col-md-6">
            <label asp-for="RoleName" class="col-form-label col-sm-2"></label>
            <div class="col-sm-6">
                <input type="text" class="form-group" asp-for="RoleName" placeholder="RoleName" />
            </div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Description" class="col-form-label col-sm-2"></label>
            <div class="col-sm-6">
                <input type="text" class="form-group" asp-for="Description" placeholder="Description" />
            </div>
        </div>
        <div class="form-group col-md-6">

            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
            </div>
        </div>

    </div>
</form>

